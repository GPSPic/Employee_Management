{% extends 'base.html' %}

{% block content %}
    <h3>Update the information for {{employee.name}}</h3>
    <form action="/employee/{{employee.id}}/end-of-employment", method="post">
        <ul>
            <li>
                <label for="name">Name: </label>
                <input type="text" id="name" name="name" value="{{employee.name}}" required maxlength="40" readonly>
            </li>
            <li>
                <label for="end_date">End date: </label>
                <input type="date" id="end_date" name="end_date" value="{{employee.end_date}}" required>
            </li>
            <li>
                <div>
                    <label for="manager">Manager:</label>
                    <select name="manager_id" id="manager">
                        {% for manager in manager_list %}
                        <option value="{{ manager.id }}" {% if manager.id == employee.manager.id %} selected {% endif %}>
                            {{ manager.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </li>
        </ul>
        <label for="hidden_form_entry"></label>
        <input type="text" id="hidden_form_entry" name="picture" value="{{employee.picture}}" required maxlength="255" readonly>
        <label for="hidden_form_entry"></label>
        <input type="text" id="hidden_form_entry" name="job_description" value="{{employee.job_description}}" required maxlength="40" readonly>
        <label for="hidden_form_entry"></label>
        <input type="tel" id="hidden_form_entry" name="contact_details" value="{{employee.contact_details}}" required maxlength="15" readonly/>
        <label for="hidden_form_entry"></label>
        <input type="date" id="hidden_form_entry" name="start_date" value="{{employee.start_date}}" required readonly>
        <label for="hidden_form_entry"></label>
        <textarea id="hidden_form_entry" name="qol_accommodations">{% if employee.qol_accommodations %}{{employee.qol_accommodations}}{% endif %}</textarea>
        <input type="submit" value="Confirm information">
    </form>
{% endblock content %}